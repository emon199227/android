<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />
    <CheckBox
        android:id="@+id/milk_chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/milk_text"
        android:textSize="20sp"
        android:buttonTint="@color/white"

/><CheckBox
        android:id="@+id/sugar_chek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/sugar_text"
        android:textSize="20sp"
        android:buttonTint="@color/white"


/><CheckBox
        android:id="@+id/water_chkr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/water_text"
        android:textSize="20sp"
        android:buttonTint="@color/white"

/>
    <Button
        android:id="@+id/btn_show_me"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_txt"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/result_txt_iew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />
</LinearLayout>