<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/app_logo_main"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"/>


    <TextView
        android:id="@+id/welcome_main"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="150dp"
        android:text="RAMADHAN"
        android:layout_marginRight="88dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_below="@+id/app_logo_main"
        />

    <TextView
        android:id="@+id/app_Slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="59dp"

        android:layout_marginRight="59dp"
        android:gravity="center_horizontal"
        android:text="Find, Discover, Choose And Buy"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_login_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Join Now"
        android:textColor="@color/colorWhite"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Already have an Account? Login"
        android:textColor="@color/colorWhite"
        android:layout_above="@id/seller_begin_main"/>


    <TextView
        android:id="@+id/seller_begin_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants to become a seller?"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/link_admin_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  I am a Admin !  "
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seller_login_btn"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:layout_margin="20dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>