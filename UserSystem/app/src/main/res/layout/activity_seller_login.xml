<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seller"
    tools:context=".seller_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_login"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_margin="60dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/title_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_login"
                android:layout_marginTop="-83dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="RAMDHAN"
                android:textColor="@color/orange"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_logo"
                android:layout_margin="20dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Seller Login "
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/seller_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_login"
                android:layout_margin="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="E-Mail"
                android:textColorHint="@color/orange"
                android:inputType="textEmailAddress"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/seller_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_login_email"
                android:layout_margin="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Password"
                android:textColorHint="@color/orange"
                android:inputType="text"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp" />
            <Button
                android:id="@+id/seller_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/seller_login_password"
                android:background="@android:color/holo_blue_light"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/seller_panel_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Seller Sign Up !  "
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/seller_login_btn"
                android:background="@android:color/holo_blue_light"
                android:layout_marginTop="15dp"
                android:layout_margin="20dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/main_panel_sell_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Back to Main Panel "
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seller_login_btn"
                android:textColor="@color/colorWhite"
                android:background="@android:color/holo_blue_light"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentLeft="true"/>



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>